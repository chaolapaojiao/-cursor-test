<view class="container">
  <canvas type="2d" id="gameCanvas" style="width: 300px; height: 600px;"></canvas>
  <view style="margin-top: 16rpx; display: flex;">
    <button bindtap="onStart">开始</button>
    <button bindtap="onPause">暂停/继续</button>
    <button bindtap="onRestart">重开</button>
  </view>
  <view style="margin-top: 16rpx;">分数：{{score}}</view>
</view>